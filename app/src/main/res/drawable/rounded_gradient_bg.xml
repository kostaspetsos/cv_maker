<!-- gradient_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background (Filled with Color) -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Change to your desired color -->
            <corners android:radius="13dp" />
        </shape>
    </item>
    <!-- Border -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:angle="45"
                android:color="#30c9cd"
                android:endColor="#330e6a"
                android:type="radial" />
        </shape>
    </item>
</layer-list>
