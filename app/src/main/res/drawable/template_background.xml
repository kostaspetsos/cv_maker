<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Shape -->
    <item
        android:width="150dp"
        android:height="210dp">

        <shape android:shape="rectangle">
            <solid android:color="#30c9cd" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Drawable -->
    <item
        android:drawable="@drawable/__mini"
        android:width="145dp"
        android:height="205dp"

        android:gravity="center">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
